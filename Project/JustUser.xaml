<Page x:Class="Project.JustUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="JustUser">

    <Grid Background="#FFE6E6DC">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="No Profile Detected" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Semilight" FontSize="40"/>
            <TextBlock Text="Click Below to make your profile" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10" FontSize="16"/>
            <Button Width="190" x:Name="CreateProfile" Click="CreateProfile_Click" Content="Create Profile" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF00628B" Foreground="White" Opacity="0.9" FontSize="16" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Page>
